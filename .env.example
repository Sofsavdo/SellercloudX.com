# ==========================================
# SellerCloudX Environment Configuration
# ==========================================
# Copy this file to .env and configure with your actual values
# NEVER commit .env file to git!

# ==========================================
# DATABASE
# ==========================================
# For Railway: Use Railway's DATABASE_URL (automatically provided)
# For local dev: use SQLite (will auto-create dev.db)
# Example PostgreSQL: postgresql://user:password@host:5432/dbname
DATABASE_URL=

# ==========================================
# SECURITY
# ==========================================
# Generate a strong random secret (at least 64 characters)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=CHANGE-THIS-TO-A-VERY-LONG-RANDOM-STRING-AT-LEAST-64-CHARACTERS

# ==========================================
# SERVER
# ==========================================
NODE_ENV=development
# PORT is automatically set by Railway/Render - don't override in production
PORT=5000
HOST=0.0.0.0

# ==========================================
# CORS & FRONTEND
# ==========================================
# Add your production domain here
CORS_ORIGIN=http://localhost:5000,http://127.0.0.1:5000
FRONTEND_ORIGIN=http://localhost:5000
VITE_API_URL=http://localhost:5000

# ==========================================
# SECURITY SETTINGS
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FILE UPLOAD
# ==========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ==========================================
# WEBSOCKET
# ==========================================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# ==========================================
# EMAIL (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@sellercloudx.com
APP_URL=http://localhost:5000

# ==========================================
# ADMIN DEFAULT CREDENTIALS
# ==========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@sellercloudx.com

# ==========================================
# AI SERVICES (Optional - Premium Features)
# ==========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ==========================================
# PAYMENT GATEWAYS (Optional)
# ==========================================
# Click Payment
CLICK_MERCHANT_ID=
CLICK_SERVICE_ID=
CLICK_SECRET_KEY=

# Payme Payment
PAYME_MERCHANT_ID=
PAYME_SECRET_KEY=

# Uzcard Payment
UZCARD_MERCHANT_ID=
UZCARD_SECRET_KEY=

# Stripe (International)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# ==========================================
# MESSAGING (Optional)
# ==========================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# ==========================================
# MONITORING (Optional)
# ==========================================
SENTRY_DSN=
